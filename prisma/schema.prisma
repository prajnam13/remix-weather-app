generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  username String  @unique
  email    String  @unique  // âœ… Add @unique here
  password String
  cities   City[]
}


model City {
  id      String  @id @default(uuid())
  name    String  @unique
  userId  String
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}